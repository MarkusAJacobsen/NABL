<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="500dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/start" />

            <TextView
                android:layout_width="59dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/startTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/startingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date"
                android:focusable="false"/>

            <EditText
                android:id="@+id/startingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/end" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/endTime" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/endingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="date"
                android:focusable="false"/>

            <EditText
                android:id="@+id/endingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="109dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/breaks" />

            <Spinner
                android:id="@+id/breaksCounter"
                android:layout_width="231dp"
                android:layout_height="35dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="57dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/overTime" />

            <Spinner
                android:id="@+id/overTimeCounter"
                android:layout_width="178dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="false"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/specialTime" />
        </LinearLayout>

        <GridLayout
            android:id="@+id/overTimeCheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="0"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/endTime" />

            <TextView
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="0"
                android:text="@string/startTime"
                android:ems="10"
                android:fontFamily="@font/roboto"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp" />

            <EditText
                android:id="@+id/holidayStartTime"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="1"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>

            <EditText
                android:id="@+id/holidayEndTime"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="1"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>

            <TextView
                android:layout_width="104dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:layout_row="1"
                android:text="@string/holiday" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="2"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/endTime" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="2"
                android:fontFamily="@font/roboto"
                android:text="@string/startTime" />

            <EditText
                android:id="@+id/weekendEndTime"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_column="6"
                android:layout_row="3"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>

            <EditText
                android:id="@+id/weekendStartTime"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_column="5"
                android:layout_row="3"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"/>

            <TextView
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_column="4"
                android:layout_row="3"
                android:ems="10"
                android:fontFamily="@font/roboto"
                android:text="@string/weekend" />
        </GridLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>